# NetMon Platform - Environment Configuration
# Copy this file to .env and update values before deployment

# ─── Database ──────────────────────────────────────────────────
DB_PASSWORD=netmon_CHANGE_THIS_PASSWORD

# ─── Redis ─────────────────────────────────────────────────────
REDIS_PASSWORD=redis_CHANGE_THIS_PASSWORD

# ─── Security Keys (generate random 64-char strings) ───────────
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHARS
JWT_SECRET_KEY=CHANGE_THIS_TO_DIFFERENT_RANDOM_64_CHARS

# ─── Application ───────────────────────────────────────────────
DEBUG=false
ALLOWED_ORIGINS=*

# Set to true when running behind HTTPS nginx
HTTPS_ONLY=false

# ─── SNMP ──────────────────────────────────────────────────────
SNMP_POLL_INTERVAL=60

# ─── Optional: LDAP / Active Directory ─────────────────────────
# Configure in Web UI under Settings → LDAP / Active Directory

# ─── Optional: Duo MFA ────────────────────────────────────────
# 1. Log in to https://admin.duosecurity.com
# 2. Go to Applications → Protect an Application
# 3. Search for "Web SDK" and click Protect
# 4. Copy Integration Key, Secret Key, and API Hostname below
# (Or configure via Settings → MFA in the web UI)
DUO_ENABLED=false
DUO_IKEY=
DUO_SKEY=
DUO_API_HOST=
DUO_TIMEOUT=60

# ─── Network Listen IP ───────────────────────────────────────
# Bind nginx to a specific IP instead of all interfaces.
# Default 0.0.0.0 = listen on all interfaces.
# Example: NETMON_LISTEN_IP=10.0.0.5
NETMON_LISTEN_IP=0.0.0.0
